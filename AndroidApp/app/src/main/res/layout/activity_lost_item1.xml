<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1FADE"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/lostMap"
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:backgroundTint="#E1FADE"
        android:onClick="onLostMapClick"
        app:srcCompat="@drawable/map" />

    <TextView
        android:id="@+id/lostItemCategory"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#8BF44336"
        android:gravity="center"
        android:text="[Lost Item Category]"
        android:textColor="#0A0202"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lostItemTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8BF44336"
        android:text="[Lost Date]"
        android:textAlignment="center"
        android:textColor="#0A0202" />

    <TextView
        android:id="@+id/lostItemAround"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#8BF44336"
        android:text="[Lost Around]"
        android:textAlignment="center"
        android:textColor="#0A0202" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="384dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lostItemDescription"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="[Description]"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </LinearLayout>

        <Space
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/lostItemImage"
            android:layout_width="235dp"
            android:layout_height="match_parent"
            android:backgroundTint="#E1FADE"
            android:onClick="onClickItemImage"
            app:srcCompat="@drawable/lostandfound" />

        <Space
            android:layout_width="148dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="384dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Additional Info:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lostItemAdditionalInfo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="[Additional Info]"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </LinearLayout>

        <Space
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:id="@+id/foundItemMessageUser"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="#853F6EB5"
        android:onClick="onLostItemMessageUserClick"
        android:text="Found Item?\nMessage User"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="75dp" />

</LinearLayout>